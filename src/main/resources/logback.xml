<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>test_file.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} | [%thread] | %-5level | %c | %M | %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>